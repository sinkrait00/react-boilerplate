{
	"extends": [
		"stylelint-config-standard",
		"stylelint-order-config-standard"
	],
	"plugins": [
		"stylelint-scss",
		"stylelint-order",
		"stylelint-declaration-block-no-ignored-properties",
		"stylelint-prettier"
	],
	"rules": {
		"prettier/prettier": [true, {"singleQuote": true, "tabWidth": 2, "useTabs": true}],
		"indentation": [
			"tab"
		],
		"color-hex-case": "lower"
	}
}